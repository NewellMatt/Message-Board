
{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="additionalNotes">Additional Notes</label>
          {{input value=additionalNotes id="additionalNotes"}}
        </div>

        <button {{action 'newQuestionMethod'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
